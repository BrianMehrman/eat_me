<h1>Eat Me User List</h1>

<ul>
<% @users.each do |user| %>
  <li> 
    <%= link_to "#{user.first} #{user.last}", user %>
    
		<% if user.avatar.file %>
			<img src="<%=user.avatar%>"/>
		<% end %>
	|
	<%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></li>
 
<% end %>
</ul>
